    private void btnXemDanhSachKhachSanActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnXemDanhSachKhachSanActionPerformed
        // TODO add your handling code here:
        //khachsanList = KhachSanDAO.xemDSKS();
        showKhachSan();

    }//GEN-LAST:event_btnXemDanhSachKhachSanActionPerformed

    private void btnXoaThongTinKhachSanActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnXoaThongTinKhachSanActionPerformed
        // TODO add your handling code here:
        int selectedIndex = tblKhachSan.getSelectedRow();
        if (selectedIndex >= 0) {
            KhachSanDTO ksDTO = khachsanList.get(selectedIndex);

            int option = JOptionPane.showConfirmDialog(this, "Báº¡n cháº¯c cháº¯n xÃ³a thÃ´ng tin khÃ¡ch sáº¡n nÃ y ?");
            //System.out.println("option: " + option);
            //yes->0
            //No->1
            //Cancel->2
            if (option == 0) {
                KhachSanBUS.XoaTTKS(ksDTO.getMaKS());
                showKhachSan();
            }
        }
    }//GEN-LAST:event_btnXoaThongTinKhachSanActionPerformed

    private void btnLuuThongTinKhachSanActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnLuuThongTinKhachSanActionPerformed
        // TODO add your handling code here:
        String maKS = txtMaKhachSan.getText();
        String tenKS = txtTenKhachSan.getText();
        String diachi = txtDiaChi.getText();
        String website = txtWebsite.getText();
        String soDT = txtSoDienThoai.getText();
        int chiphi = Integer.parseInt(txtChiPhi.getText());

        KhachSanDTO ksDTO = new KhachSanDTO(maKS, tenKS, diachi, website, soDT, chiphi);
        KhachSanBUS.LuuTTKS(ksDTO);
        showKhachSan();
    }//GEN-LAST:event_btnLuuThongTinKhachSanActionPerformed

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnResetActionPerformed
        // TODO add your handling code here:
        txtMaKhachSan.setText("");
        txtTenKhachSan.setText("");
        txtDiaChi.setText("");
        txtWebsite.setText("");
        txtSoDienThoai.setText("");
        txtChiPhi.setText("");
    }//GEN-LAST:event_btnResetActionPerformed

    private void btnTimKiemKhachSanActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnTimKiemKhachSanActionPerformed
        // TODO add your handling code here:
        Object[] options = {
            "TÃ¬m kiáº¿m theo mÃ£ khÃ¡ch sáº¡n", "TÃ¬m kiáº¿m theo tÃªn khÃ¡ch sáº¡n", "Ä�Ã³ng"
        };
        int select = JOptionPane.showOptionDialog(this, "Báº¡n muá»‘n tÃ¬m kiáº¿m theo phÆ°Æ¡ng thá»©c nÃ o ?", "TÃ¹y chá»�n", JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.QUESTION_MESSAGE, null, options, options[2]);
        //System.out.println("select: " + select);
        //mÃ£ -> select: 0
        //tÃªn -> select: 1
        // chi phi -> select: 2
        // Ä‘Ã³ng -> select: 3
        if (select == 0) {
            String input = JOptionPane.showInputDialog(this, "Má»�i nháº­p mÃ£ khÃ¡ch sáº¡n !");

            if (input != null && input.length() > 0) {
                khachsanList = KhachSanBUS.findByMaKS(input);

                tableModel.setRowCount(0);

                khachsanList.forEach(ksDTO -> {
                    tableModel.addRow(new Object[]{
                        ksDTO.getMaKS(), ksDTO.getTenKS(), ksDTO.getDiachiKS(), ksDTO.getWebsite(), ksDTO.getSoDT(), ksDTO.getChiphi()

                    });
                });
            } else {
                JOptionPane.showMessageDialog(null, "Lá»—i tÃ¬m kiáº¿m !");
            }

        }
        
        if(select == 1){
            String input = JOptionPane.showInputDialog(this,"Má»�i nháº­p tÃªn khÃ¡ch sáº¡n !");
            
            if (input != null && input.length() > 0) {
                khachsanList = KhachSanBUS.findByTenKS(input);

                tableModel.setRowCount(0);

                khachsanList.forEach(ksDTO -> {
                    tableModel.addRow(new Object[]{
                        ksDTO.getMaKS(), ksDTO.getTenKS(), ksDTO.getDiachiKS(), ksDTO.getWebsite(), ksDTO.getSoDT(), ksDTO.getChiphi()

                    });
                });
            } else {
                JOptionPane.showMessageDialog(null, "Lá»—i tÃ¬m kiáº¿m !");
            }
        }
    }//GEN-LAST:event_btnTimKiemKhachSanActionPerformed

    private void btnSuaThongTinKhachSanActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnSuaThongTinKhachSanActionPerformed
        // TODO add your handling code here:
       showData();
    }//GEN-LAST:event_btnSuaThongTinKhachSanActionPerformed

    private void btnCapNhatActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnCapNhatActionPerformed
         //TODO add your handling code here:
        String maKS = txtMaKhachSan.getText();
        String tenKS = txtTenKhachSan.getText();
        String diachi = txtDiaChi.getText();
        String website = txtWebsite.getText();
        String soDT = txtSoDienThoai.getText();
        int chiphi = Integer.parseInt(txtChiPhi.getText());

        KhachSanDTO ksDTO = new KhachSanDTO(maKS, tenKS, diachi, website, soDT, chiphi);
        
        KhachSanBUS.CapNhatTTKS(ksDTO);
        //showKhachSan();
        
        int i = tblKhachSan.getSelectedRow();
        KhachSanBUS.xemDSKS();
        tableModel.setValueAt(maKS, i, 0);
        tableModel.setValueAt(tenKS, i, 1);
        tableModel.setValueAt(diachi, i, 2);
        tableModel.setValueAt(website, i, 3);
        tableModel.setValueAt(soDT, i, 4);
        tableModel.setValueAt(chiphi, i, 5);
        tblKhachSan.setModel(tableModel);
    }//GEN-LAST:event_btnCapNhatActionPerformed

