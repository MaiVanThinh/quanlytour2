    private void btnXemDanhSachNhaHangActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnXemDanhSachNhaHangActionPerformed
        // TODO add your handling code here:
        showNhaHang();      
    }//GEN-LAST:event_btnXemDanhSachNhaHangActionPerformed

    private void btnLuuThongTinNhaHangActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnLuuThongTinNhaHangActionPerformed
        // TODO add your handling code here:
        String maNH = txtMaNhaHang.getText();
        String tenNH = txtTenNhaHang.getText();
        String diachi = txtDiaChi.getText();
        String website = txtWebsite.getText();
        String soDT = txtSoDienThoai.getText();
        int chiphi = Integer.parseInt(txtChiPhi.getText());
        
        NhaHangDTO nhDTO = new NhaHangDTO(maNH, tenNH, diachi, website, soDT, chiphi);
        NhaHangBUS.luuTTNH(nhDTO);
        showNhaHang();
    }//GEN-LAST:event_btnLuuThongTinNhaHangActionPerformed

    private void btnResetActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnResetActionPerformed
        // TODO add your handling code here:
        txtMaNhaHang.setText("");
        txtTenNhaHang.setText("");
        txtDiaChi.setText("");
        txtWebsite.setText("");
        txtWebsite.setText("");
        txtSoDienThoai.setText("");
        txtChiPhi.setText("");
    }//GEN-LAST:event_btnResetActionPerformed

    private void btnTimKiemNhaHangActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnTimKiemNhaHangActionPerformed
        // TODO add your handling code here:
        Object[] options = {
            "TÃ¬m kiáº¿m theo mÃ£ nhÃ  hÃ ng", "TÃ¬m kiáº¿m theo tÃªn nhÃ  hÃ ng", "Ä�Ã³ng"
        };
        int select = JOptionPane.showOptionDialog(this, "Báº¡n muá»‘n tÃ¬m kiáº¿m theo phÆ°Æ¡ng thá»©c nÃ o?", "TÃ¹y chá»�n", JOptionPane.YES_NO_CANCEL_OPTION, JOptionPane.QUESTION_MESSAGE, null, options, options[2]);
        
        //System.out.println("select: " + select);
        //mÃ£ -> select: 0
        //tÃªn -> select: 1
        // chi phi -> select: 2
        // Ä‘Ã³ng -> select: 3
        
        if(select == 0){
            String input = JOptionPane.showInputDialog(this, "Má»�i báº¡n nháº­p mÃ£ nhÃ  hÃ ng !");
            
            if(input != null && input.length() > 0){
                nhahangList = NhaHangBUS.findByMaNH(input);
                tableModel.setRowCount(0);
                
                nhahangList.forEach(nhDTO -> {
                    tableModel.addRow(new Object[] {
                        nhDTO.getMaNH(), nhDTO.getTenNH(), nhDTO.getDiachi(), nhDTO.getWebsite(), nhDTO.getSoDT(), nhDTO.getChiphi()
                    });
                });
            }
            else {
                JOptionPane.showMessageDialog(null, "Lá»—i tÃ¬m kiáº¿m !");
            }
        }
        
        if(select == 1){
            String input = JOptionPane.showInputDialog(this, "Má»�i báº¡n nháº­p tÃªn nhÃ  hÃ ng");
            
            if(input != null && input.length() > 0){
                nhahangList = NhaHangBUS.findByTenNH(input);
                tableModel.setRowCount(0);
                
                nhahangList.forEach(nhDTO -> {
                    tableModel.addRow(new Object[]{
                        nhDTO.getMaNH(), nhDTO.getTenNH(), nhDTO.getDiachi(), nhDTO.getWebsite(), nhDTO.getSoDT(), nhDTO.getChiphi()
                    });
                });
            }
            else {
                JOptionPane.showMessageDialog(null, "Lá»—i tÃ¬m kiáº¿m !");
            }
        }
    }//GEN-LAST:event_btnTimKiemNhaHangActionPerformed

    private void btnXoaThongTinNhaHangActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_btnXoaThongTinNhaHangActionPerformed
        // TODO add your handling code here:
        int selectedIndex = tblNhaHang.getSelectedRow();
        if(selectedIndex >= 0){
            NhaHangDTO nhDTO = nhahangList.get(selectedIndex);
            
            int option = JOptionPane.showConfirmDialog(this, "Báº¡n cháº¯c cháº¯n muá»‘n xÃ³a thÃ´ng tin nÃ y ?");
            
            //System.out.println("option: " + option);
            //yes->0
            //No->1
            //Cancel->2
            
            if(option == 0){
                NhaHangBUS.XoaTTNH(nhDTO.getMaNH());
                showNhaHang();
            }
        }
    }//GEN-LAST:event_btnXoaThongTinNhaHangActionPerformed

    private void tnSuaThongTinNhaHangActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_tnSuaThongTinNhaHangActionPerformed
